$padding-bottom: (
    pbr-160: (64px, 64px, 160px, 160px, ),
    pbr-136: (64px, 64px, 136px, 136px, ),
    pbr-120: (64px, 64px, 120px, 120px, ),
    pbr-20-120: (20px, 20px, 120px, 120px, ),
    pbr-112: (80px, 80px, 112px, 112px),
    pbr-96: (64px, 64px, 96px, 96px),
    pbr-80: (48px, 48px, 80px, 80px),
    pbr-64: (32px, 32px, 64px, 64px),
    pbr-24:  (16px, 16px, 24px, 24px)
);

