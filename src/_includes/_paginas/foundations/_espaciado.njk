---
layout: base.njk
---
{% import "_macros/_insert.njk" as insert %}
<div class="container-fluid">{% include '_website/hero.njk' %}</div>
<section>
  <div class="row">
    <div class="col-xs-12">
      <div class="main-content innermarkdown">
        <h2>Margin </h2>
        <h5>Margin Global</h5>
        <div class="is-flex w-100 content-sp-between mb-48">
          {% call insert.spacer('','m-8') %}{% endcall %}
          {% call insert.spacer('','m-16') %}{% endcall %}
          {% call insert.spacer('','m-24') %}{% endcall %}
          {% call insert.spacer('','m-32') %}{% endcall %}
          {% call insert.spacer('','m-40') %}{% endcall %}
          {% call insert.spacer('','m-48') %}{% endcall %}
        </div>
        <h5>Margin Unitario</h5>
        <div class="is-flex w-100 content-sp-between mb-48">
          {% call insert.spacer('top','mt-16') %}{% endcall %}
          {% call insert.spacer('right','mr-16') %}{% endcall %}
          {% call insert.spacer('left','ml-16') %}{% endcall %}
          {% call insert.spacer('bottom','mb-16') %}{% endcall %}
        </div>
        <div class="height-sm"></div>
        <h2>Paddings </h2>
        <h5>Padding Global</h5>
        <div class="is-flex w-100 content-sp-between mb-48">
          {% call insert.spacer('','p-8') %}{% endcall %}
          {% call insert.spacer('','p-16') %}{% endcall %}
          {% call insert.spacer('','p-24') %}{% endcall %}
          {% call insert.spacer('','p-32') %}{% endcall %}
          {% call insert.spacer('','p-40') %}{% endcall %}
          {% call insert.spacer('','p-48') %}{% endcall %}
        </div>
        <h5>Padding Unitario</h5>
        <div class="is-flex w-100 content-sp-between mb-48">
          {% call insert.spacer('top','pt-16') %}{% endcall %}
          {% call insert.spacer('right','pr-16') %}{% endcall %}
          {% call insert.spacer('left','pl-16') %}{% endcall %}
          {% call insert.spacer('bottom','pb-16') %}{% endcall %}
        </div>
        <div class="height-sm"></div>
        <h5>Padding Website border</h5>
        <div class="is-flex w-100  mb-48">
          {% call insert.spacer('','pl-body') %}{% endcall %}
          {% call insert.spacer('','pr-body') %}{% endcall %}
        </div>
        <div class="height-sm"></div>
        <h5>Padding Responsive </h5>
        <div class="is-flex w-100  mb-48">
          {% call insert.spacer('64 - 128 ','mbr-128') %}{% endcall %}
          {% call insert.spacer('24 - 32','mbr-32') %}{% endcall %}
          {% call insert.spacer('16 - 24','mbr-24') %}{% endcall %}
        </div>


        <div class="is-flex w-100  mb-48">
          {% call insert.spacer('64 - 128 ','pbr-160') %}{% endcall %}
          {% call insert.spacer('64 - 136','pbr-136') %}{% endcall %}
          {% call insert.spacer('64 - 120','pbr-120') %}{% endcall %}
          {% call insert.spacer('20 - 120','pbr-20-120') %}{% endcall %}
          {% call insert.spacer('80 - 112','pbr-112') %}{% endcall %}
          {% call insert.spacer('64 - 96','pbr-96') %}{% endcall %}
          {% call insert.spacer('48 - 80','pbr-80') %}{% endcall %}
          {% call insert.spacer('32 - 64','pbr-64') %}{% endcall %}
          {% call insert.spacer('16 - 24','pbr-24') %}{% endcall %}
        </div>


        <div class="is-flex w-100  mb-48">
          {% call insert.spacer('64 - 128 ','ptr-160') %}{% endcall %}
          {% call insert.spacer('64 - 136','ptr-136') %}{% endcall %}
          {% call insert.spacer('64 - 120','ptr-120') %}{% endcall %}
          {% call insert.spacer('20 - 120','ptr-20-120') %}{% endcall %}
          {% call insert.spacer('80 - 112','ptr-112') %}{% endcall %}
          {% call insert.spacer('64 - 96','ptr-96') %}{% endcall %}
          {% call insert.spacer('48 - 80','ptr-80') %}{% endcall %}
          {% call insert.spacer('32 - 64','ptr-64') %}{% endcall %}
          {% call insert.spacer('16 - 24','ptr-24') %}{% endcall %}
        </div>


<div>
