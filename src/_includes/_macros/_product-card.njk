{% import '_macros/_icon.njk' as icons %}

{% macro pushProductCard(title = 'Nombre del producto', price = '1.200.888 COP', imageSrc = '/assets/static/images/pdp/pdp-1.jpg', imageAlt = 'Producto') %}
<div class="md-push-product-card">
  <div class="md-push-product-card-media">
    <div class="md-push-product-card-figure-wrapper">
      <figure class="md-push-product-card-figure focus:inset" role="button" tabindex="0">
        <img 
          class="md-push-product-card-figure-img"
          src="{{ imageSrc }}" 
          alt="{{ imageAlt }}"
        >
      </figure>
    </div>
  </div>
  <div class="md-push-product-card-info">
    <div class="md-push-product-card-info-content">
      <div class="md-push-product-card-info-header">
        <h2 class="md-push-product-card-title title-s">{{ title }}</h2>
        <div class="md-push-color-selector">
            <ul class="md-push-color-selector-list" role="listbox">
              <li class="md-push-color-selector-item is-active">
                <button type="button" role="option" aria-selected="true" class="btn md-push-color-selector-btn is-active" title="MARRÓN, Ref. 6893/116">
                  <img src="https://placehold.co/16x16" alt="MARRÓN" />
                </button>
              </li>
              <li class="md-push-color-selector-item md-push-color-selector-item--more" aria-hidden="true">
                <span class="md-push-color-selector-more-text text-m">
                  +2
                </span>
              </li>
            </ul>
          </div>
      </div>
      <div class="md-push-product-card-info-body">
        <div class="md-product-prices">
          <div class="md-product-pricegroup">
            <div class="md-product-pricebox">
              <div class="md-product-pricebox-amount">
                <span class="md-product-pricebox-price title-m">
                  <span>{{ price }}</span>
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="md-push-product-card-info-append">
      <button class="btn btn-tertiary" type="button">
        {{ icons.icon('plus', '16') }}
      </button>
    </div>
  </div>
</div>
{% endmacro %}
