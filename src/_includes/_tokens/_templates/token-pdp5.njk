        // Obtener la posición top respecto al viewport
        const rect = ctaMainAction.getBoundingClientRect();
        const viewportHeight = window.innerHeight || document.documentElement.clientHeight;
        // Limpiar clases previas
        wrapper.classList.remove('md-bottom-sheet-sizes--to-top', 'md-bottom-sheet-sizes--to-bottom');
