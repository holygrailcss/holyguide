<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Añade la clase 'ficha-sticky' al elemento <body>
        document.body.classList.add("ficha-sticky");
    });
    // Obtén los elementos del DOM
    const btnMenuMobile = document.getElementById("btn-menumobile");
    const btnMenuOverlay = document.getElementById("pdp-extra-info-overlay");
    // Función para alternar la clase en el cuerpo del documento y hacer scroll al inicio si se cumple la condición
    const toggleExtraInfoAndScroll = () => {
        document.body.classList.toggle("is-pdp-extra-info-open");
        // Verifica si la altura scrolleada es mayor o igual a la altura del viewport
        if (window.scrollY >= window.innerHeight) {
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }
    };
    // Función para eliminar la clase 'is-pdp-extra-info-open' cuando el navegador se ensancha
    const handleResize = () => {
        if (document.body.classList.contains("is-pdp-extra-info-open")) {
            document.body.classList.remove("is-pdp-extra-info-open");
        }
    };
    // Agrega el event listener para los clics en los botones
    btnMenuMobile.addEventListener("click", toggleExtraInfoAndScroll);
    btnMenuOverlay.addEventListener("click", toggleExtraInfoAndScroll);
    // Agrega el event listener para el cambio de tamaño de la ventana
    window.addEventListener("resize", handleResize);



</script>