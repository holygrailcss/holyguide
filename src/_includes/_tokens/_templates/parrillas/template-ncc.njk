  <script>

document.addEventListener("DOMContentLoaded", function() {
  const list = document.getElementById('list');
  const items = list.getElementsByTagName('li');
  const indexDiv = document.getElementById('itemIndex');
  let activeIndex = 0;

  function updateActiveItem(newIndex) {
    items[activeIndex].classList.remove('is-active');
    activeIndex = newIndex;
    items[activeIndex].classList.add('is-active');
    updateIndexDisplay();
  }

  function updateIndexDisplay() {
    indexDiv.textContent = activeIndex + 1; // +1 porque los índices en JavaScript comienzan en 0
  }

  document.getElementById('prevArrow').addEventListener('click', function() {
    const newIndex = activeIndex > 0 ? activeIndex - 1 : items.length - 1;
    updateActiveItem(newIndex);
  });

  document.getElementById('nextArrow').addEventListener('click', function() {
    const newIndex = activeIndex < items.length - 1 ? activeIndex + 1 : 0;
    updateActiveItem(newIndex);
  });

  updateIndexDisplay(); // Inicializar el display con el índice correcto al cargar
});

  </script>
