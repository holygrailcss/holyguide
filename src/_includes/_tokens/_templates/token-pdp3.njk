<script>
    window.addEventListener('scroll', function() {
        if (window.scrollY > document.querySelector('.subheader-logo').offsetHeight - 50) {
            document.body.classList.add('has-logomini');
        } else {
            document.body.classList.remove('has-logomini');
        }
    });

    document.addEventListener('DOMContentLoaded', () => {
        const el = document.querySelector('.subinfo-boxsticky');
        if (!el) return console.warn('No encuentro .subinfo-boxsticky en el DOM');
        const topOffset = el.offsetTop - 48;
        window.addEventListener('scroll', () => {
            if (window.pageYOffset >= topOffset) {
                el.classList.add('is-sticky');
            } else {
                el.classList.remove('is-sticky');
            }
        });
    });
</script>
