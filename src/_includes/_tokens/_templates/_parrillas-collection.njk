<script>
const classesToModify = ['n1a', 'n1c', 'n2a', 'n2b', 'n2c', 'n3b', 'n4a', 'n4e', 'n4f', 'n6b', 'nt'];


document.addEventListener('DOMContentLoaded', () => {
    ['suffix-0', 'suffix-1', 'suffix-2'].forEach(suffixId => {
        const suffix = suffixId.split('-')[1];
        document.getElementById(suffixId).addEventListener('click', function() {
            applySuffixToClasses(suffix);
        });
    });
});

function applySuffixToClasses(suffix) {
    classesToModify.forEach(baseClass => {
        document.querySelectorAll(`.${baseClass}`).forEach(element => {
            // Eliminar las clases anteriores con sufijos
            for (let i = 0; i <= 2; i++) {
                element.classList.remove(`${baseClass}-${i}`);
            }
            // AÃ±adir la nueva clase con sufijo
            element.classList.add(`${baseClass}-${suffix}`);
        });
    });
}
</script>