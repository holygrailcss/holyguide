<style>
  /* Ajuste de posición inicial sin valores fijos */

</style>

<script>
  function mostrarViewport() {
    const ancho = window.innerWidth;
    const alto = window.innerHeight;
    const viewportInfo = document.getElementById('viewportInfo');
    const scrollY = window.scrollY;
    viewportInfo.textContent = `El viewport visible es de ${ancho}px de ancho y ${alto}px de alto. Has scrolleado ${scrollY}px.`;

    const bottomSheetExtra = document.querySelector('.bottom-sheet-extra');
    const buttonZoneContainer = document.querySelector('.bottom-sheet');

    if (bottomSheetExtra && buttonZoneContainer) {
      const buttonZoneHeight = buttonZoneContainer.offsetHeight;
      bottomSheetExtra.style.top = `${alto - buttonZoneHeight}px`;
    }

  const carouselContainer = document.getElementById('carouselContainer');
  if (carouselContainer && buttonZoneContainer) {
    const buttonZoneHeight = buttonZoneContainer.offsetHeight;
    carouselContainer.style.paddingBottom = `${buttonZoneHeight}px`;
  }
  }

  
  window.addEventListener('load', mostrarViewport);
</script>
